<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
       >
        <EditText
            android:id="@+id/edtPost"
            android:layout_width="match_parent"
            android:minHeight="100dp"
            android:maxHeight="600dp"
            android:layout_height="wrap_content"
            android:hint="Hôm nay bạn thế nào?"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibpost"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/post"
            android:tooltipText="Đăng bài"

            android:layout_toRightOf="@id/edtPost"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="0dp" />
        <ImageButton
            android:id="@+id/ibaddimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tooltipText="Thêm ảnh"
            android:src="@drawable/camera"
            android:layout_toRightOf="@id/ibpost"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/ibchup"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tooltipText="Chụp ảnh"
            android:src="@drawable/camera"
            android:layout_toRightOf="@id/ibpost"
            android:background="@android:color/transparent"/>

    </LinearLayout>
        <ImageView
            android:id="@+id/imgShow"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

